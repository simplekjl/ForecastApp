<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_title_location"
        android:key="@string/pref_key_location"
        android:defaultValue="@string/pref_default_value_location"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:key="@string/pref_metric_key"
        android:title="@string/pref_title_metrics"
        android:dialogTitle="@string/pref_metrics_dialog_title"
        android:summary="@string/pref_summary_metrics"
        android:entries="@array/pref_metrics_entries"
        android:entryValues="@array/pref_metrics_values"
        android:defaultValue="@string/pref_metrics_default_value" />

</PreferenceScreen>