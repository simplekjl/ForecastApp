<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_title_location"
        android:key="@string/pref_key_location"
        android:defaultValue="@string/pref_default_value_location"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:key="@string/pref_units_key"
        android:title="@string/pref_units_label"
        android:summary="@string/pref_summary_metrics"
        android:dialogTitle="@string/pref_units_label"
        android:defaultValue="@string/pref_units_metric"
        android:entryValues="@array/pref_units_values"
        android:entries="@array/pref_units_options"/>
</PreferenceScreen>